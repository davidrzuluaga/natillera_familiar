<div class="row">
  <div class="col-3 offset-md-4" id="sep5">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h2 class="card-title">Forgot your password?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <p> <%= devise_error_messages! %></p>

            <div class="field">
              <%= f.label :email %>
                <br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"exampleInputEmail1" %>
            </div>

            <div class="actions">
              <%= f.submit "Send reset password instructions", class:"btn btn-primary" %>
            </div>
            <% end %>

              <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>