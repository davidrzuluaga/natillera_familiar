<div class="row">
    <div class="col-md-8 offset-md-2">

        <div class="thing">
            <div class="container">
              <% flash.each do |key, value| %>
                <div class="alert alert-<%= key == "" ? "success" : key %>"><%= value %></div>
              <% end %>
            </div>

            <h1>Usuario <%=@user.name.nil? ? @user.email : @user.name%></h1>
            <h2>Ahorros: <%=number_to_currency(@saves.sum(:money), :unit => "$")%></h2>

            <%=render 'layouts/savestable'%>

            <div class="savesform" > <!--style="display: none;"-->
                <%= link_to "Nuevo Ahorro", newsave_path, remote: true, class: "btn btn-primary" %>
            </div>
        </div>

        <div class="thing">
            <h2>Actividades de la Natillera</h2>
            <strong>Ganancias: <%=number_to_currency(@activities.sum(:earn), :unit => "$")%></strong>
    
            <%=render 'layouts/activitytable'%>    
            
            <div class="activityform" > <!--style="display: none;"-->
                <%= link_to "Nueva Actividad", newactivity_path, remote: true, class: "btn btn-primary" %>
            </div>

        </div>
        <div class="thing">
            <%=render 'layouts/debttable'%>    

            <p>Agregar una deuda a este socio &#x2193;</p>
            <%= form_for @debt.build, url: newdebt_path, html: {method: "post"}, class:"form-row align-items-center" do |f| %>
                <%= f.hidden_field :user_id, :integer => @user.id %>
                <%= f.date_select :date, start_year: 2018, end_year: Time.now.year, placeholder:"Fecha"%> -
                <%= f.text_field :money, placeholder:"Cantidad"%>    
                <%= f.text_field :note, placeholder:"Concepto"%>
                <%= f.submit 'Subir', class: 'btn btn-secondary btn-sm', id:"card" %>
            <% end %>
        </div>
    </div>
</div>
