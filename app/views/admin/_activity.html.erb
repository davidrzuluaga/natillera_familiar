<%= title %>
<%= form_for @activity, remote: true, class:"form-row align-items-center" do |f| %>
    <%= f.text_field :user_id, :integer => @user.id %>
    <%= f.date_select :date, start_year: 2018, end_year: Time.now.year, placeholder:"Fecha"%> -
    <%= f.select :activity, options_for_select(@activitieslist), class:"custom-select mr-sm-2", id:"inlineFormCustomSelect" %> -
    <%= f.text_field :earn, placeholder:"Ganancia"%>    
    <%= f.text_field :note, placeholder:"Nota"%>
    <%= f.submit 'Subir', class: 'btn btn-secondary btn-sm', id:"card" %>
<% end %>